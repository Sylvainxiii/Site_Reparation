{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class='container'>
        <h1>Mon compte</h1>
        <img class='avatar' src="data:image/jpeg;base64,{{ fr_utilisateur_uti.utiAvatar }}" alt="photo de profil" class="img-profil">

        <table class="table">
            <tbody>
                <tr>
                    <th>Email:</th>
                    <td>{{ fr_utilisateur_uti.email }}</td>
                </tr>
                <tr>
                    <th>Nom:</th>
                    <td>{{ fr_utilisateur_uti.utiNom }}</td>
                </tr>
                <tr>
                    <th>Prénom:</th>
                    <td>{{ fr_utilisateur_uti.utiPrenom }}</td>
                </tr>
                <tr>
                    <th>Né le:</th>
                    <td>{{ fr_utilisateur_uti.utiNaissanceDate ? fr_utilisateur_uti.utiNaissanceDate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Inscrit le:</th>
                    <td>{{ fr_utilisateur_uti.utiDateAdd ? fr_utilisateur_uti.utiDateAdd|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a class='btn' href="{{ path('app_fr_utilisateur_uti_edit', {'id': fr_utilisateur_uti.id}) }}">Editer</a>
        <a class='links' href="{{ path('app_home') }}">Retour</a>

    </div>

    {{ include('fr_utilisateur_uti/_delete_form.html.twig') }}
{% endblock %}
